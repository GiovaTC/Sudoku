<Window x:Class="SudokuGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sudoku Game" Height="600" Width="600">
    <Grid>
        <UniformGrid Rows="9" Columns="9" Margin="20">
            <!-- Generar 81 TextBoxes para cada celda del Sudoku -->
            <TextBox Width="40" Height="40" FontSize="20" 
                     TextAlignment="Center" VerticalContentAlignment="Center" 
                     BorderBrush="Gray" BorderThickness="0.5" 
                     Background="White" />
            <TextBox Width="40" Height="40" FontSize="20" 
                     TextAlignment="Center" VerticalContentAlignment="Center" 
                     BorderBrush="Gray" BorderThickness="0.5" 
                     Background="White" />
            <!-- Repite el TextBox 81 veces (se simplifican por claridad) -->
            <!-- Sugerencia: Puedes copiar y pegar o crear un estilo con un bucle de generación en el código detrás -->
        </UniformGrid>
    </Grid>
</Window>
